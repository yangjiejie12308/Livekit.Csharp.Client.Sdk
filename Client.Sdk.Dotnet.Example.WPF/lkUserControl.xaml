<UserControl
    x:Class="Client.Sdk.Dotnet.Example.WPF.lkUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Sdk.Dotnet.Example.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid
            x:Name="videoPanels"
            Grid.Row="0"
            Grid.Column="0"
            Columns="2"
            Rows="2" />

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="Identity"
                Grid.Column="0"
                TextAlignment="Center" />
            <TextBlock
                x:Name="microphone"
                Grid.Column="1"
                TextAlignment="Center" />
            <TextBlock
                x:Name="Quality"
                Grid.Column="2"
                TextAlignment="Center" />
            <TextBlock
                x:Name="speaker"
                Grid.Column="3"
                TextAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>
